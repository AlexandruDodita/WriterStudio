{
  "name": "writers-studio",
  "productName": "Writer's Studio",
  "version": "1.0.0",
  "description": "A desktop application for writers",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "electron-builder build --win --publish never",
    "build:mac": "electron-builder build --mac --publish never",
    "build:linux": "electron-builder build --linux --publish never",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dist": "npm run build"
  },
  "keywords": [],
  "author": {
    "name": "Alex Dodita",
    "email": "alexdoditatomi@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@electron-forge/cli": "^7.7.0",
    "@electron-forge/maker-deb": "^7.7.0",
    "@electron-forge/maker-rpm": "^7.7.0",
    "@electron-forge/maker-squirrel": "^7.7.0",
    "@electron-forge/maker-zip": "^7.7.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.7.0",
    "@electron-forge/plugin-fuses": "^7.7.0",
    "@electron/fuses": "^1.8.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "babel-jest": "^29.7.0",
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
